{
    "$schema": "https://turborepo.org/schema.json",
    "ui": "tui",
    "tasks": {
        "topo": {
            "dependsOn": ["^topo"]
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".cache/tsbuildinfo.json", "dist/**"]
        },
        "dev": {
            "with": ["tunnel"],
            "cache": false,
            "persistent": false,
            "interactive": true
        },
        "format": {
            "outputs": [".cache/.prettiercache"],
            "outputLogs": "new-only"
        },
        "lint": {
            "dependsOn": ["^topo", "^build"],
            "outputs": [".cache/.eslintcache"]
        },
        "typecheck": {
            "dependsOn": ["^topo", "^build"],
            "outputs": [".cache/tsbuildinfo.json"]
        },
        "clean": {
            "cache": false
        },
        "//#clean": {
            "cache": false
        },
        "push": {
            "cache": false,
            "interactive": true
        },
        "studio": {
            "cache": false,
            "persistent": true
        },
        "ui-add": {
            "cache": false,
            "interactive": true
        },
        "tunnel": {
            "cache": false,
            "persistent": true,
            "interactive": true
        }
    },
    "globalEnv": [
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_PROD_URL",

        "DATABASE_URL",

        "AUTH_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET"
    ],
    "globalPassThroughEnv": ["NODE_ENV", "PORT", "CI", "VERCEL", "VERCEL_ENV", "VERCEL_URL", "npm_lifecycle_event"]
}
